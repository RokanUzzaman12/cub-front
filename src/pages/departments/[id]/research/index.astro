---
import UniversityResearch from "../../../../components/Research/UniversityResearch.jsx";
import CommonBreadCrumb from "../../../../components/common/CommonBreadCrumb.astro";
import Layout from "../../../../layouts/Layout.astro";
import {fetchDepartments} from "../../../../api/departments"
import { removeDash } from "../../../../lib/removeDash";
const { id } = Astro.params;

export async function getStaticPaths() {
  const departments = await fetchDepartments();
  return departments.data.map((dept: { slug: string; }) => ({
    params: { id: dept.slug },
  }));
}
---

<Layout>
  <CommonBreadCrumb title={removeDash(id)} />

  <UniversityResearch slug={id} departmentResearch={true} client:load />
</Layout>